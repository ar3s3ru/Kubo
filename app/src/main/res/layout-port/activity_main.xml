<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/KuboTheme.MainActivity">

    <LinearLayout style="@style/KuboTheme.MainActivity"
        android:id="@+id/activity_main_layout"
        android:orientation="vertical">

        <TextView style="@style/KuboTheme.List.Element.Header"
            android:id="@+id/activity_main_starred_header"
            android:text="@string/header_starred"
            android:drawableLeft="@drawable/ic_star_full"
            android:drawableStart="@drawable/ic_star_full" />

        <android.support.v7.widget.RecyclerView style="@style/KuboTheme.List"
            android:id="@+id/activity_main_recyclerview_star_boards" />

        <TextView style="@style/KuboTheme.List.Element.Header"
            android:id="@+id/activity_main_unstarred_header"
            android:text="@string/header_unstarred"
            android:drawableLeft="@drawable/ic_star_empty"
            android:drawableStart="@drawable/ic_star_empty" />

        <android.support.v7.widget.RecyclerView style="@style/KuboTheme.List"
            android:id="@+id/activity_main_recyclerview_unstar_boards" />

    </LinearLayout>

</ScrollView>
